# TinyGo Environment Variables Example
# Copy this file to .env and set your actual values

# Authentication (REQUIRED)
TINYGO_AUTH_USERNAME=admin
TINYGO_AUTH_PASSWORD=your_secure_password_here

# Optional: Custom session key (default: tinygo_session)
# TINYGO_AUTH_SESSION_KEY=your_custom_session_key

# Optional: Session timeout in seconds (default: 3600 = 1 hour)
# TINYGO_AUTH_SESSION_MAX_AGE=7200

# Server configuration
TINYGO_ADDR=:8080
TINYGO_BASE_URL=http://localhost:8080

# Database configuration
TINYGO_DATABASE_DRIVER=sqlite
TINYGO_DATABASE_DSN=data/tinygo.db

# Logging configuration
TINYGO_LOG_LEVEL=info
TINYGO_LOG_FORMAT=text
